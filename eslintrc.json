{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-jsx",
    "prettier",
    "prettier/react",
    "prettier/standard"
  ],
  "plugins": [
    "standard",
    "react",
    "prettier"
  ],
  "rules": {
    "prefer-const": ["error", {
      "destructuring": "all"
    }],
    "quote-props": ["error", "as-needed"],
    "eol-last": "off",
    "comma-dangle": "off",
    "prettier/prettier": [
      "error", {
        "semi": false,
        "printWidth": 80,
        "arrowParens": "always",
        "jsxBracketSameLine": true,
        "jsxSingleQuote": true,
        "singleQuote": true
      }
    ]
  }
}
